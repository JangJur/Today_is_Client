<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
    tools:context=".InitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/circle"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoText="false"
                android:gravity="center_horizontal|center"
                android:text="초기 설정 화면입니다. \n성별과 두가지 스타일을 선택해주세요!!"
                android:textColor="@color/common_google_signin_btn_text_light_pressed"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/blueGray50"
                android:text="\n성별 선택\n"
                android:textColor="@color/browser_actions_text_color" />

            <RadioGroup
                android:id="@+id/f_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@color/blueGray50"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/f_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="남성"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                <RadioButton
                    android:id="@+id/f_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="여성"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/browser_actions_bg_grey"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Street_sam"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_weight="0"
                        app:srcCompat="@drawable/street" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0"
                        android:text="Street style"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Casual_sam"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_weight="0"
                        app:srcCompat="@drawable/casual" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0"
                        android:text="Casual style"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Classic_sam"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_weight="0"
                        app:srcCompat="@drawable/classic" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0"
                        android:shadowColor="@color/cardview_shadow_end_color"
                        android:text="Classic style"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textColorHint="@color/cardview_light_background" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Spoty_sam"
                        android:layout_width="wrap_content"
                        android:layout_height="120dp"
                        android:layout_weight="0"
                        app:srcCompat="@drawable/spoty" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0"
                        android:text="Spoty style"
                        android:textColor="@color/common_google_signin_btn_text_dark_focused"
                        android:textColorHint="@color/common_google_signin_btn_text_light_pressed" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/gray200"
                android:text="\n첫번째 스타일 선택\n"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            <RadioGroup
                android:id="@+id/f_selc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/gray200"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/f_str"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/blueGray500"
                    android:text="Street"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                <RadioButton
                    android:id="@+id/f_cas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Casual"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                <RadioButton
                    android:id="@+id/f_spo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Spoty"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                <RadioButton
                    android:id="@+id/f_cla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Classic"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />
            </RadioGroup>

            <TextView
                android:id="@+id/tv_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/gray300"
                android:text="\n두번째 스타일 선택\n"
                android:textColor="@color/browser_actions_text_color" />

            <RadioGroup
                android:id="@+id/s_selc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/gray300"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/s_str"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Street"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                <RadioButton
                    android:id="@+id/s_cas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Casual"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                <RadioButton
                    android:id="@+id/s_spo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Spoty"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />

                <RadioButton
                    android:id="@+id/s_cla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Classic"
                    android:textColor="@color/common_google_signin_btn_text_dark_focused" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="다음" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>